﻿
@model ContactMessageVM
@{
    ViewData["Title"] = "Detail";
}

<div style="margin-right:100px" class="container mt-5">
    <h1>Detail</h1>
    <div class="slider-text mt-3">
        <h3>Name: <span>@Model.Name</span></h3>
        <h3>Email: <span>@Model.Email</span></h3>

        <h3>Message:<p>@Model.Message</p></h3>
    </div>

    <div class="back mt-2">
        <a class="btn btn-info text-white" asp-action="MessageIndex">Back</a>
    </div>
</div>

