@model TeamCreateVM
@{
    ViewData["Title"] = "Create";
}



<div style="margin-right:100px" class="container mt-5">
    <form class="forms-sample mt-5" asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label for="exampleInputUsername1">Full Name</label>
            <input asp-for="FullName" class="form-control" placeholder="Fill Name">
            <span class="text-danger" asp-validation-for="FullName"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Position</label>
            <input asp-for="Position" class="form-control" placeholder="Position">
            <span class="text-danger" asp-validation-for="Position"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Logo</label>
            <input asp-for="Image" class="form-control">
            <span class="text-danger" asp-validation-for="Image"></span>
        </div>

        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>

</div>