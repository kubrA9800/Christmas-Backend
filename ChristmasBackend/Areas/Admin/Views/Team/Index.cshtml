@model List<TeamVM>
@{
    ViewData["Title"] = "Index";
}

<div style="margin-right:100px" class="container mt-5">
    <h1 style="margin-top:100px" class="text-center">Team</h1>
    <a class="btn btn-success" asp-action="Create">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                       Full Name
                    </th>
                    <th>
                        Position
                    </th>
                   
                    <th>
                        Operation
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td class="py-1">
                            <img style="width:150px; height:150px" src="~/img/team/@person.Image" alt="image" />
                        </td>
                       
                        <td>
                            @person.FullName
                        </td>
                        <td style="white-space:normal">
                            @person.Position
                        </td>

                        <td>

                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@person.Id">Detail</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@person.Id">Edit</a>
                            <form class="d-inline-block" method="post" asp-action="Delete" asp-route-id="@person.Id">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>

                            </form>
                        </td>

                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>

