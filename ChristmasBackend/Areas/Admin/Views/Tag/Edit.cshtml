﻿
@model TagEditVM
@{
    ViewData["Title"] = "Edit";
}

<div style="margin-right:100px" class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Edit">
        <div class="form-group my-3">
            <label asp-for="Name">New Tag</label>
            <input asp-for="Name" type="text" class="form-control">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-4">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>
</div>

