@model AdvertCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container" style="margin-right:100px">
    <form class="forms-sample mt-5" method="post" enctype="multipart/form-data" asp-action="Create">
        <div class="form-group">
            <label asp-for="Text">Description</label>
            <input asp-for="Text" class="form-control" placeholder="Description">
            <span asp-validation-for="Text"></span>
        </div>
        <div class="form-group">
            <label asp-for="Photo">Image</label>
            <input asp-for="Photo" class="form-control">
            <span asp-validation-for="Photo"></span>
        </div>

        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <div class="back mt-3">
            <a class="btn btn-info" asp-action="Index">Back</a>
        </div>
    </form>

</div>
