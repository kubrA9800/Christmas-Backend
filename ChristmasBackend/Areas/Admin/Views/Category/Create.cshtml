﻿
@model CategoryCreateVM
@{
    ViewData["Title"] = "Create";
}
<div class="container mt-5" style="margin-right:100px">
    <form class="forms-sample" method="post" asp-action="Create">

        <div class="form-group my-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control ">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <button type="submit" class="btn btn-primary mr-4">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>
</div>

