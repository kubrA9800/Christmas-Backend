﻿
@model ReviewVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5" style="margin-right:100px;">
    <div class="image mb-3">
        <img src="~/img/testimonial/@Model.Image" style="width:30%; height:20%;" />
    </div>

    <h3 class="mb-3">@Model.CustomerName</h3>

    <p class="mb-3">@Model.CustomerName</p>


    <div class="back mt-2">
        <a class="btn btn-info text-white" asp-action="Index">Back</a>
    </div>
</div>

