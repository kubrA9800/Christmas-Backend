@model BlogPageVM
@{
    ViewData["Title"] = "Index";
}

<div class="page-banner-section section" style="background-image: url(/img/bg/page-banner.jpg)">
    <div class="container">
        <div class="row">

            <!-- Page Title Start -->
            <div class="page-title text-center col">
                <h1>blog</h1>
            </div><!-- Page Title End -->

        </div>
    </div>
</div><!-- Page Banner Section End-->
<!-- Blog Section Start-->
<div class="blog-section section bg-gray pt-100 pb-60">
    <div class="container">
        <div class="row flex-row-reverse">

            <!-- Blog Wrapper -->
            <div class="col-lg-8 col-12 mb-60">
                <div class="row">
                    @foreach (var blog in Model.Blogs)
                    {
                        <div class="blog-item col-md-6 col-12 mb-60">

                            <!-- Image -->
                            <a asp-controller="BlogDetail" asp-action="Index" asp-route-id="@blog.Id" class="image"><img src="img/blog/@blog.Images.FirstOrDefault(m=>m.IsMain).Image" alt="blog"></a>

                            <!-- Content -->
                            <div class="content fix">

                                <!-- Publish Date -->
                                <span class="publish"><span>Published on:</span>@blog.CreatedDate.ToString("MM/dd/yyyy") </span>

                                <!-- Title -->
                                <h4 class="title"><a href="blog-details.html">@blog.Title</a></h4>

                                <!-- Decs -->
                                <p>@blog.Text.Substring(0,100)</p>
                                <!-- Read More Link -->
                                <a asp-controller="BlogDetail" asp-action="Index" asp-route-id="@blog.Id" class="read-more">Read More</a>

                            </div>

                        </div>

                        <!-- Blog Item End-->
                    }
                    @foreach (var blog in Model.Blogs)
                    {
                        <div class="blog-item col-md-6 col-12 mb-60">

                            <!-- Image -->
                            <a asp-controller="BlogDetail" asp-action="Index" asp-route-id="@blog.Id" class="image"><img src="img/blog/@blog.Images.FirstOrDefault(m=>m.IsMain).Image" alt="blog"></a>

                            <!-- Content -->
                            <div class="content fix">

                                <!-- Publish Date -->
                                <span class="publish"><span>Published on:</span>@blog.CreatedDate.ToString("MM/dd/yyyy") </span>

                                <!-- Title -->
                                <h4 class="title"><a href="blog-details.html">@blog.Title</a></h4>

                                <!-- Decs -->
                                <p>@blog.Text.Substring(0,100)</p>
                                <!-- Read More Link -->
                                <a asp-controller="BlogDetail" asp-action="Index" asp-route-id="@blog.Id" class="read-more">Read More</a>

                            </div>

                        </div>

                        <!-- Blog Item End-->
                    }
                    <!-- Blog Item Start-->
                    <!-- Blog Item Start-->
                    <!-- Pagination Start -->
                    <div class="pagination col-12 mt-20">
                        <ul>
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
