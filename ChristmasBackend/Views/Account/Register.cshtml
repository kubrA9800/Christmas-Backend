@model RegisterVM

@{
    ViewData["Title"] = "Register";
}


<style>
    .gradient-custom {
        /* fallback for old browsers */
        background:white;
        /* Chrome 10-25, Safari 5.1-6 */
        background: rgb(180,68,58);
        background: linear-gradient(90deg, rgba(180,68,58,1) 0%, rgba(181,110,92,1) 56%, rgba(168,26,10,1) 95%);
    }
</style>




<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card  text-black" style="border-radius: 1rem;height:600px">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-2 mt-md-2 pb-1">

                            <h2 class=" fw-bold mb-3 text-uppercase">Sign up</h2>
                            <div style="color:red" ; asp-validation-summary="All"></div>
                            <form method="post" asp-controller="Account" asp-action="Register">
                                <div class="form-outline form-white mb-2">
                                    <label asp-for="FullName">Full name:</label>
                                    <input class="form-control form-control-sm" asp-for="FullName">
                                    <span style="color:red; margin-bottom:10px" asp-validation-for="FullName"></span>
                                </div>

                                <div class="form-outline form-white mb-2">
                                    <label asp-for="UserName">UserName:</label>
                                    <input class="form-control form-control-sm" asp-for="UserName">
                                    <span style="color:red; margin-bottom:10px" asp-validation-for="UserName"></span>
                                </div>
                                <div class="form-outline form-white mb-2">
                                    <label asp-for="Email">Email:</label>
                                    <input class="form-control form-control-sm" asp-for="Email">
                                    <span style="color:red; margin-bottom:10px" asp-validation-for="Email"></span>
                                </div>

                                <div class="form-outline form-white mb-2">
                                    <label asp-for="Password">Password:</label>
                                    <input class="form-control form-control-sm" asp-for="Password">
                                    <span style="color:red; margin-bottom:10px" asp-validation-for="Password"></span>
                                </div>
                                <div class="form-outline form-white mb-2">
                                    <label asp-for="ConfirmPassword">Confirm password:</label>
                                    <input class="form-control form-control-sm" asp-for="ConfirmPassword">
                                    <span style="color:red; margin-bottom:10px" asp-validation-for="ConfirmPassword"></span>
                                </div>



                                <button class="btn bg-dark btn-outline-light btn-sm mt-2 px-5" type="submit">Sign up</button>


                            </form>
                           
                        </div>

                        <div>
                            <p class="mb-0">
                               Have already an account? <a asp-action="Login" class="text-dark-50 fw-bold">Sign in</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

